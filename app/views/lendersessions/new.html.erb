<% provide :title, "Sign in" %>
<h1>Sign in</h1>
<%= form_for(:lendersession, url: lendersessions_path) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit "Sign in" %>
  </div>
<% end %>
<p>New user? <%= link_to "Sign up now!", lendersignup_path %></p>
