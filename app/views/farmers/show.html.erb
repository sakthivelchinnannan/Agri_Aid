<% provide(:title, @farmer.name) %>
<table class="profile">
  <tr>
    <td class="main">
      <h1>
	<%= @farmer.name%>
      </h1>
    </td>
    <td class="sidebar round">
      <table class="sidebar round">
      <tr><td><strong>Name</strong></td><td> <%= @farmer.name %></td></tr>
      <tr><td><strong>Address</strong></td><td>  <%= @farmer.village %>,<br /><%= @farmer.taluk %>,<br /><%= @farmer.district %></td></tr>
      <tr><td><strong>Phone</strong></td><td> <%= @farmer.phone %></td></tr>
      </table>
      <strong>URL</strong>  <%= link_to farmer_path(@farmer), @farmer %>
    </td>
  </tr>
</table>
