<div class="user_info">
	<table class="sidebar round">
      <tr><td><strong>Lender Name</strong></td><td> <%= @lender.name %></td></tr>
      <tr><td><strong>Address</strong></td><td>  <%= @lender.street %>,<br /><%= @lender.taluk %>,<br /><%= @lender.district %></td></tr>
      <tr><td><strong>Phone</strong></td><td> <%= @lender.phone %></td></tr>
	  <tr><td><strong>Email</strong></td><td> <%= @lender.email %></td></tr>
    </table>
    <strong>URL</strong>  <%= link_to lender_path(@lender), @lender %><br />

    <span class="microposts">Lender has 
      <%= pluralize(current_lender.lendablemachineries.count, "lendable machinery") %>
    </span>
</div>
