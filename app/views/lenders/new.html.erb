<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<%= form_for(@lender) do |f| %>
  <%= render 'shared/lender_error_messages', object: f.object %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :state %><br />
    <%= select(:lender, :state_cd, options_for_select(State.all.map {|m|[m.name,m.state_cd]}.insert(0,'Select a State..'))) %>
  </div>
  <div class="field">
    <%= f.label :district %><br />
    <%= select(:lender, :district_cd, options_for_select(District.all.map {|m|[m.name,m.district_cd]}.insert(0,'Select a district..'))) %>
  </div>
  <div class="field">
    <%= f.label :taluk %><br />
	<span id="talukSelect">
  	</span>
  </div>
  <div class="field">
    <%= f.label :village %><br />
    <span id="villageSelect">
  	</span>
  </div>
  <div class="field">
    <%= f.label :street %><br />
    <%= f.text_field :street %>
  </div>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
