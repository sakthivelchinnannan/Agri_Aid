<script type="text/javascript">
jQuery(function($) {
$("#lender_taluk_cd").change(function(){
  $("div.ui-overlay").css({'visibility':'visible'})
  $("div.ui-widget").css({'visibility':'visible'})
  $("#forOverlay").addClass("fakewindowcontain")
  var url = '/static_pages/lndr_updatevillage_select?taluk_cd=' + $(this).val()
  jQuery.get(url, function(data) {
	$("#villageSelect").html(data);
	$("div.ui-overlay").css({'visibility':'hidden'})
	$("div.ui-widget").css({'visibility':'hidden'})
  });
  return false;
});
})
</script>

<%= select(:lender, :taluk_cd, options_for_select(taluks.collect {|m|[m.name,m.taluk_cd]}.insert(0,'Select a taluk..'))) %>