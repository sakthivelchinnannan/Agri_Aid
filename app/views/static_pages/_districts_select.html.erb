<script type="text/javascript">
jQuery(function($) {
$("#district_cd").change(function(){
  var url = '/static_pages/updatetaluk_select?district_cd=' + $(this).val()
  jQuery.get(url, function(data) {
	$("#talukSelect").html(data);
  });
  return false;
});
})
</script>

<%= label_tag(:select_district) %><br />
<%= select_tag(:district_cd, options_for_select(District.all.map {|m|[m.name,m.district_cd]}.insert(0,'Select a district..'))) %>